{
    "compilerOptions": {
        "target": "es2020", // Set the ECMAScript target version
        "module": "commonjs", // No module system since it's a micro-scripting environment
        "strict": true, // Enable strict type-checking options
        "noEmit": true, // Prevent emitting output files
        "skipLibCheck": true, // Skip type checking of declaration files
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "baseUrl": ".", // Base directory to resolve non-relative module names
        "typeRoots": [
            "./types" // Specify the directory for custom type definitions
        ]
    },
    "include": [
        "types/**/*.d.ts",
        "scripts/**/*.ts", // Include all TypeScript files in the root directory
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules" // Exclude node_modules if it exists
    ]
}